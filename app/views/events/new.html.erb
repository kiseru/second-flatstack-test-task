<h1>Create new event</h1>

<%= form_for @event, url: {action: "create"} do |f| %>
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>

  <div>
    <%= f.submit "Create event" %>
  </div>
<% end %>