<div class="w-400 mx-auto">
  <div class="bg-white rounded shadow">
    <div class="p-3 text-center">
      <h1 class="h3 mb-3 font-weight-normal">Добавить событие</h1>

      <%= form_for @event, url: { action: :update } do |f| %>
        <div class="form-group">
          <%= f.label :name, 'Название' %><br/>
          <%= f.text_field :name, class: %w(form-control) %>
        </div>

        <div class="form-group">
          <%= f.label :date, 'Дата' %>
          <%= f.datetime_field :date, class: 'form-control' %>
        </div>

        <div class="form-group">
          <label for="recurrence">Повтор</label>
          <select class="form-control" name="recurrence" id="recurrence">
            <option value="0">Никогда</option>
            <option value="1">Ежедневно</option>
            <option value="2">Каждую неделю</option>
            <option value="3">Каждый месяц</option>
            <option value="4">Каждый год</option>
          </select>
        </div>

        <div class="pt-3">
          <%= f.submit "Изменить событие", class: %w(btn btn-primary btn-block) %>
        </div>
      <% end %>
    </div>
  </div>
</div>