<div class="form-sign-in mx-auto">
  <div class="bg-white rounded shadow">
    <div class="p-3 text-center">
      <h1 class="h3 mb-3 font-weight-normal">Войти</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.label :email, class: %w(sr-only) %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: %w(form-control), placeholder: 'Email' %>

        <%= f.label :password, class: %w(sr-only) %>
        <%= f.password_field :password, autocomplete: "current-password", class: %w(form-control), placeholder: 'Пароль' %>


        <% if devise_mapping.rememberable? -%>
          <div class="mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <%= f.submit "Sign in", class: %w(btn btn-lg btn-primary btn-block) %>
      <% end %>

      <div class="mt-5">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
